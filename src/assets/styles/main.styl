*
*::before
*::after
  box-sizing border-box

$gray-color = #2a341d
body
  font-size 16px
  font-family "Roboto", serif
  line-height 19px

.bold
  font-weight 700
.app-dropdown
  background-image url('@/assets/images/icons/dropdown-arrow.svg')
  background-repeat no-repeat
  background-position right 15px top 50%
  appearance none
.app-button
.app-dropdown
  cursor pointer
.app-field
  width 455px
  height 40px
  margin-bottom 38px
  padding-right 15px
  padding-left 15px
  color $gray-color
  font-size 16px
  line-height 19px
  background-color #fff
  border 1px solid #ededed
  border-radius 4px
  &__label
    display inline-block
    margin-bottom 4px